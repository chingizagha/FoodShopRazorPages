@using OdeToFood.Core
@model Restaurant

<div class="card mt-4">
    <div class="card-title">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a asp-page="./Detail" asp-route-restaurantId="@Model.Id" class="btn btn-primary" >
            Go
        </a>
        <a asp-page="./Edit" asp-route-restaurantId="@Model.Id" class="btn btn-primary">
            Edit
        </a>
        <a asp-page="./Delete" asp-route-restaurantId="@Model.Id" class="btn btn-primary">
            Delete
        </a>
    </div>
</div>