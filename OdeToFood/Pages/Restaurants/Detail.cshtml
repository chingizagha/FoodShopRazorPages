@page "{restaurantId:int}"  
@model OdeToFood.Pages.Restaurants.DetailModel
@{
}

@if(Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<h1>Detail: @Model.Restaurant.Name</h1>

<div style="margin-bottom: 50px">
    Id: @Model.Restaurant.Id
</div>
<div style="margin-bottom: 50px">
    Id: @Model.Restaurant.Location
</div>
<div style="margin-bottom: 50px">
    Id: @Model.Restaurant.Cuisine
</div>



<a asp-page="./List" class="btn btn-dark">All Restaurants</a>
